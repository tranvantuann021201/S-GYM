<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="65dp"
    tools:context=".ui.dialog.RestDialog">

    <TextView
        style="@style/txt_title_styles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/txt_rest_timer"
        android:layout_centerHorizontal="true"
        android:text="Nghỉ ngơi"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/txt_rest_timer"
        style="@style/txt_title_styles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:text="00:30"
        android:textColor="@color/black"
        android:textSize="50sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_20s_plus"
        style="@style/txt_title_styles"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_rest_timer"
        android:background="@drawable/radius_color_d0"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="+20s"
        android:textSize="22sp" />

    <Button
        android:id="@+id/btn_rest_skip"
        style="@style/txt_title_styles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_rest_timer"
        android:layout_alignParentEnd="true"
        android:background="@drawable/radius_btn"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Bỏ qua"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/txt_completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_20s_plus"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Đã hoàn thành"
        android:textSize="20sp" />

</RelativeLayout>