<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.RestFragment"
    android:paddingHorizontal="65dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/txt_title_styles"
        android:text="Nghỉ ngơi"
        android:layout_above="@id/txt_rest_timer"
        android:layout_centerHorizontal="true"
        android:textSize="35sp"
        />

    <TextView
        android:id="@+id/txt_rest_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/txt_title_styles"
        android:text="00:30"
        android:textSize="50sp"
        android:layout_centerInParent="true"
        android:textColor="@color/black"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_20s_plus"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/radius_color_d0"
        android:text="+20s"
        android:fontFamily="sans-serif-condensed-medium"
        android:layout_below="@id/txt_rest_timer"
        style="@style/txt_title_styles"
        android:textSize="22sp"
        />

    <Button
        style="@style/txt_title_styles"
        android:textSize="22sp"
        android:id="@+id/btn_rest_skip"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/radius_btn"
        android:text="Bỏ qua"
        android:layout_alignParentEnd="true"
        android:fontFamily="sans-serif-condensed-medium"
        android:layout_below="@id/txt_rest_timer"/>

</RelativeLayout>