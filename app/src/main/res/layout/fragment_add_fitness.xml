<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.AddFitnessFragment"
    android:id="@+id/ac_add_fitness"
    android:padding="@dimen/padding_parent_horizontal"
    >

    <RelativeLayout
        android:id="@+id/action_add_fitness_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingHorizontal="5dp"
        >

        <TextView
            android:id="@+id/btn_back"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/back"
            />

        <TextView
            style="@style/txt_title_styles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Danh sách bài tập"
            android:layout_toEndOf="@id/btn_back"
            android:layout_marginStart="15dp"
            />

    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_add_fitness"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/action_add_fitness_fragment"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        />

</RelativeLayout>