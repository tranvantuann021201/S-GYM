<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.dialog.UpdateBMIDialog"
    android:layout_marginHorizontal="60dp"
    style="@style/done_fitness_cv">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="15dp">

        <TextView
            android:id="@+id/txt_weight_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cân nặng (KG)"
            style="@style/txt_title_styles"
            android:layout_centerHorizontal="true"
            />

        <EditText
            android:id="@+id/edt_weight"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_weight_content"
            android:layout_alignStart="@id/txt_weight_content"
            android:inputType="numberDecimal"
            />

        <TextView
            android:id="@+id/txt_height_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chiều cao (CM)"
            style="@style/txt_title_styles"
            android:layout_below="@id/edt_weight"
            android:layout_marginTop="30dp"
            android:layout_alignStart="@id/txt_weight_content"
            />

        <EditText
            android:id="@+id/edt_height"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_height_content"
            android:layout_alignStart="@id/txt_weight_content"
            android:layout_marginBottom="20dp"
            android:inputType="numberDecimal"
            />

        <Button
            android:id="@+id/btn_save_bmi_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edt_height"
            android:layout_alignEnd="@id/edt_height"
            android:layout_marginTop="-2dp"
            android:layout_marginEnd="-40dp"
            android:background="@drawable/radius_btn"
            android:text="Lưu"
            android:textSize="@dimen/txt_size_btn_dialog" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cancel_bmi_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edt_height"
            android:layout_marginEnd="60dp"
            android:layout_toStartOf="@+id/btn_save_bmi_dialog"
            android:background="@drawable/radius_color_d0"
            android:text="Hủy"
            android:textSize="@dimen/txt_size_btn_dialog" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>