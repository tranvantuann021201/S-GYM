<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/cv_item"
    android:id="@+id/item_edit_advanced_fitness"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_icon_change_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableStart="@drawable/baseline_arrange_medium_24"
            android:paddingHorizontal="15dp" />

        <TextView
            android:id="@+id/txt_animation_name"
            style="@style/txt_title_styles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/txt_icon_change_index"
            android:text="Neu nÃºi" />

        <TextView
            android:id="@+id/txt_animation_amount"
            style="@style/txt_amount_animation_style"
            android:layout_below="@id/txt_animation_name"
            android:layout_alignStart="@id/txt_animation_name"
            android:text="X20" />

        <ImageView
            android:id="@+id/img_animation_exercise"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_toStartOf="@id/txt_icon_remove_animation"
            android:layout_marginEnd="15dp"
            />

        <TextView
            android:id="@+id/txt_icon_remove_animation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/baseline_close_for_item"
            android:layout_alignParentEnd="true"
            />

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>