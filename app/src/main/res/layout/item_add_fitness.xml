<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/done_fitness_cv"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_item"
    android:paddingHorizontal="@dimen/item_margin_horizontal"
    android:id="@+id/item_add_fitness"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/item_margin_horizontal">

        <ImageView
            android:id="@+id/img_animation_my_plan"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:padding="15dp" />

        <TextView
            android:id="@+id/txt_exer_name"
            style="@style/txt_title_styles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/img_animation_my_plan"
            android:text="Tên động tác"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>