<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".EditAdvanceFitnessFragment"
    android:padding="@dimen/item_margin_horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_btn_add"
        android:layout_marginTop="@dimen/item_margin_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_item"
        app:cardBackgroundColor="#FF0026AF"
        app:cardCornerRadius="@dimen/item_cv_radius"
        android:layout_marginBottom="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableTop="@drawable/baseline_add_24"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="THÊM"
                android:textColor="#D0D0D0D0"
                android:textSize="@dimen/size_text_title" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_edit_advance_fitness"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/cv_btn_add"
        android:layout_above="@id/btn_save"
        android:paddingBottom="15dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_save"
        android:background="@drawable/radius_btn"
        android:text="Lưu"
        style="@style/txt_title_styles"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:paddingTop="15dp"
        />

</RelativeLayout>