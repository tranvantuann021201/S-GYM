<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:id="@+id/item_edit_basic_fitness">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_icon_change_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableStart="@drawable/baseline_arrange_medium_24"
            android:paddingHorizontal="15dp" />

        <TextView
            android:id="@+id/txt_animation_name"
            style="@style/item_title"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_toStartOf="@+id/img_animation_exercise"
            android:layout_toEndOf="@id/txt_icon_change_index"
            android:text="Neu nÃºi" />

        <TextView
            android:id="@+id/txt_animation_amount"
            style="@style/item_mount_exer"
            android:layout_below="@id/txt_animation_name"
            android:layout_alignStart="@id/txt_animation_name"
            android:text="X20" />

        <ImageView
            android:id="@+id/img_animation_exercise"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_toStartOf="@id/btn_remove_animation"
            />
        <TextView
            android:id="@+id/btn_remove_animation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/baseline_close_for_item"
            android:layout_alignParentEnd="true"
            />

    </RelativeLayout>
</RelativeLayout>