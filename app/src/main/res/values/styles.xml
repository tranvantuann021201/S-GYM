<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="txt_title_styles">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@string/title_font</item>
        <item name="android:textSize">@dimen/size_text_title</item>
        <item name="android:paddingVertical">@dimen/item_margin_vertical</item>
    </style>

    <style name="txt_name_aniamtion_styles">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@string/title_font</item>
        <item name="android:textSize">@dimen/size_text_title</item>
        <item name="android:paddingVertical">@dimen/item_margin_vertical</item>
    </style>

    <style name="btn_next_and_previous">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">25dp</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:paddingVertical">@dimen/padding_parent_horizontal</item>
    </style>

    <style name="txt_exer_and_calo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="txt_exer_and_calo_amount">
        <item name="android:layout_below">@id/txt_exer</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:textSize">35sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">#FF0026AF</item>
    </style>

    <style name="done_fitness_cv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginVertical">@dimen/item_margin_vertical</item>
        <item name="cardCornerRadius">10dp</item>
    </style>

    <style name="cv_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginVertical">@dimen/item_margin_vertical</item>
        <item name="cardCornerRadius">10dp</item>
    </style>

    <style name="txt_amount_animation_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="txt_option_setting">
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingHorizontal">30dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="timer_fitness_setting">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">60sp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">3dp</item>

    </style>

    <style name="FullScreenDialogStyle" parent="Theme.SplashScreen">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="MyDatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="item_title">
        <item name="android:layout_marginTop">17dp</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="item_mount_exer">
        <item name="android:textSize">15dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
    </style>

</resources>